<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackgroundLight</item>
        <item name="windowBackground">@color/windowBackgroundLight</item>

        <item name="textColorPrimary">@android:color/primary_text_light</item>
        <item name="textColorSecondary">@android:color/secondary_text_light</item>
        <item name="textColorTertiary">@android:color/tertiary_text_light</item>

        <item name="cardBackgroundColor">@color/cardBackgroundColorLight</item>
        <item name="itemcardBackgroundColor">@color/itemcardbackgroundColorLight</item>

        <item name="buttonNormalColor">@color/material_grey300</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="windowBackground">@color/windowBackgroundDark</item>
        <item name="android:windowBackground">@color/windowBackgroundDark</item>

        <item name="textColorPrimary">@color/textColorPrimaryDark</item>
        <item name="textColorSecondary">@color/textColorSecondaryDark</item>
        <item name="textColorTertiary">@color/textColorTertiaryDark</item>

        <item name="cardBackgroundColor">@color/cardBackgroundColorDark</item>
        <item name="itemcardBackgroundColor">@color/itemcardbackgroundColorDark</item>

        <item name="buttonNormalColor">@color/material_grey700</item>

        <item name="preferenceTheme">@style/DarkPreferenceTheme</item>
    </style>

    <style name="DefTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_def</item>
        <item name="android:textColor">?textColorPrimary</item>
    </style>

    <style name="DefButtonStyle" parent="Theme.AppCompat">
        <item name="colorButtonNormal">?buttonNormalColor</item>
        <item name="android:textSize">@dimen/text_size_def</item>
        <item name="android:textColor">?textColorPrimary</item>
    </style>
</resources>
